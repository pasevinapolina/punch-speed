<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/half_margin">

        <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:id="@+id/punchTypeHistoryTextView"
            android:layout_weight="2.5"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center_vertical|start"
            android:layout_height="match_parent" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:elevation="0dp"
            android:layout_weight="3"
            android:layout_height="25dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_left_hand"
                android:id="@+id/handsHistoryImageView"
                android:layout_weight="1"
                android:layout_gravity="center" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_gloves_on"
                android:id="@+id/glovesHistoryImageView"
                android:layout_weight="1" />

            <TextView
                android:text="100"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/weightHistoryTextView"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_punch_without_step"
                android:id="@+id/positionHistoryImageView"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:text="TextView"
            android:layout_height="wrap_content"
            android:id="@+id/dateHistoryTextView"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:gravity="center_vertical|end" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/speed_title_h"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_weight="1"
            android:padding="1dp"
            android:textSize="14sp" />

        <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/speedHistoryTextView"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_weight="1"
            android:padding="1dp"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/reaction_title_h"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_weight="1"
            android:padding="1dp"
            android:textSize="14sp" />

        <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/reactionHistoryTextView"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_weight="1"
            android:padding="1dp"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/fourth_margin">

        <TextView
            android:text="@string/acceleration_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_weight="1"
            android:padding="1dp"
            android:textSize="14sp" />

        <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/accelerationHistoryTextView"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_weight="1"
            android:padding="1dp"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>