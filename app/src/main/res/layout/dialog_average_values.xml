<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_margin="@dimen/normal_margin"
        android:text="@string/average_values"/>

    <View
        android:id="@+id/headerDivider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimary" />

    <LinearLayout
        android:id="@+id/dialogContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/normal_margin"
        android:orientation="vertical">

        <include layout="@layout/settings_item" />


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/double_small_margin">

            <TableRow
                android:background="@android:color/white"
                android:padding="@dimen/half_margin">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/my"
                    android:textColor="@color/colorTextBlack"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/average"
                    android:textColor="@color/colorTextBlack"
                    android:textStyle="bold"/>
            </TableRow>

            <TableRow
                android:background="@color/colorGrey"
                android:padding="@dimen/fourth_margin">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/speed_title"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/speed_result"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/speed_result"/>
            </TableRow>

            <TableRow
                android:background="@android:color/white"
                android:padding="@dimen/fourth_margin">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/reaction_title"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/reaction_result"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/reaction_result"/>
            </TableRow>

            <TableRow
                android:background="@color/colorGrey"
                android:padding="@dimen/half_margin">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/acceleration_title"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/acceleration_result"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/acceleration_result"/>
            </TableRow>

        </TableLayout>

    </LinearLayout>

    <View
        android:id="@+id/footerDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrey"/>

    <Button
        android:id="@+id/dialogOkButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ok"
        android:textSize="16sp"
        android:textColor="@color/colorRedDark"
        android:background="@android:color/white"/>

</LinearLayout>