<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/white"
              android:rowCount="4"
              android:columnCount="3">

    <TextView
        android:id="@+id/topNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_rowSpan="4"
        android:text="138"
        android:layout_margin="@dimen/half_margin"
        android:background="@drawable/text_background_grey"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="18sp"/>


    <TextView
        android:id="@+id/loginCommunityTextView"
        android:text="user name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center_vertical|start"
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_marginBottom="@dimen/half_margin"/>


    <TextView
        android:id="@+id/speedTitle"
        android:text="@string/speed_title_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:textColor="@android:color/black"
        android:padding="1dp"
        android:textSize="14sp"/>

        <TextView
            android:id="@+id/speedCommunityTextView"
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:padding="1dp"
            android:textSize="14sp"/>

        <TextView
            android:text="@string/reaction_title_h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:padding="1dp"
            android:textSize="14sp"
            android:layout_marginRight="@dimen/four_small_margin"
            android:layout_marginEnd="@dimen/four_small_margin"
            android:id="@+id/reactionTitle"/>

        <TextView
            android:id="@+id/reactionCommunityTextView"
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:padding="1dp"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/accelerationTitle"
            android:text="@string/acceleration_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:padding="1dp"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/accelerationCommunityTextView"
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:padding="1dp"
            android:textSize="14sp"
            android:layout_marginBottom="@dimen/half_margin"/>


</GridLayout>